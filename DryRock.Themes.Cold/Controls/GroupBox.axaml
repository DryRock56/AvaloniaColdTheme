<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:ClassModifier="internal">

    <Design.PreviewWith>
        <StackPanel Orientation="Horizontal">
            <ThemeVariantScope RequestedThemeVariant="Default">
                <Border Padding="20" Background="{DynamicResource ThemeBackgroundBrush}">
                    <StackPanel Spacing="20">
                        <HeaderedContentControl Theme="{StaticResource GroupBox}" Header="Example Header">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                        </HeaderedContentControl>
                        <HeaderedContentControl Theme="{StaticResource GroupBox}" Header="Example Header" IsEnabled="False">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                        </HeaderedContentControl>
                    </StackPanel>
                </Border>
            </ThemeVariantScope>
            <ThemeVariantScope RequestedThemeVariant="Dark">
                <Border Padding="20" Background="{DynamicResource ThemeBackgroundBrush}">
                    <StackPanel Spacing="20">
                        <HeaderedContentControl Theme="{StaticResource GroupBox}" Header="Example Header">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                        </HeaderedContentControl>
                        <HeaderedContentControl Theme="{StaticResource GroupBox}" Header="Example Header" IsEnabled="False">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                        </HeaderedContentControl>
                    </StackPanel>
                </Border>
            </ThemeVariantScope>
        </StackPanel>
    </Design.PreviewWith>

    <ControlTheme x:Key="GroupBox"
                  TargetType="HeaderedContentControl">

        <Setter Property="Padding" Value="3" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid RowDefinitions="auto *" ColumnDefinitions="auto *">
                    <!-- Header -->
                    <Border Name="PART_HeaderBorder"
                            ZIndex="1"
                            Background="{DynamicResource ThemeBackgroundBrush}"
                            Padding="5,0,5,0"
                            Margin="5,0,0,0">
                        <TextBlock Name="PART_Header" Text="{TemplateBinding Header}" FontWeight="Bold" />
                    </Border>

                    <!-- Content Area -->
                    <Border Name="PART_ContentBorder"
                            Grid.RowSpan="2"
                            Grid.ColumnSpan="2"
                            Padding="0,5,0,0"
                            Margin="0,10,0,0"
                            BorderBrush="{DynamicResource ThemeBorderLowBrush}"
                            BorderThickness="{StaticResource BorderDefaultThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                        <ContentPresenter Name="PART_ContentPresenter"
                                          Padding="8"
                                          Content="{TemplateBinding Content}" />
                    </Border>
                </Grid>
            </ControlTemplate>
        </Setter>

        <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="RecognizesAccessKey" Value="True" />
        </Style>

        <Style Selector="^:disabled">
            <Style Selector="^ /template/ TextBlock#PART_Header">
                <Setter Property="Opacity" Value="0.5" />
            </Style>

            <Style Selector="^ /template/ Border#PART_ContentBorder">
                <Setter Property="Opacity" Value="0.5" />
            </Style>

            <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Opacity" Value="0.5" />
            </Style>
        </Style>

    </ControlTheme>
</ResourceDictionary>
